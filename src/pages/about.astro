---
import Layout from '../layouts/Layout.astro';

const pageTitle = "About CourtVision Daily";
const pageDescription = "Discover the story behind CourtVision Daily, your go-to source for daily insights into basketball excellence, blending expert analysis with dynamic sports passion.";

const missionPoints = [
  "Provide in-depth game breakdowns and player spotlights",
  "Share exclusive interviews with coaches, athletes, and insiders",
  "Offer data-driven predictions and trend analyses to keep you ahead of the curve"
];

const teamMembers = [
  {
    name: "Marcus Thompson",
    role: "Editor-in-Chief",
    bio: "Former NBA analyst with 15 years of experience covering basketball at the highest levels."
  },
  {
    name: "Sarah Chen",
    role: "Content Director",
    bio: "Basketball statistician and writer who bridges the gap between numbers and storytelling."
  },
  {
    name: "David Rodriguez",
    role: "Sports Analyst",
    bio: "Graduate of Harvard's Sports Analytics program with a focus on player development trends."
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <style>
    {`
      .hero-pattern {
        background: linear-gradient(rgba(12, 20, 38, 0.9), rgba(12, 20, 38, 0.9)), 
                    radial-gradient(circle at top right, #ffb30020, transparent 30%),
                    radial-gradient(circle at bottom left, #0c142680, transparent 40%);
      }
      
      .accent-border {
        border-left: 4px solid #ffb300;
      }
      
      .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
      }
    `}
  </style>

  <!-- Hero Section -->
  <div class="hero-pattern min-h-screen flex items-center justify-center relative overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-yellow-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
      <div class="absolute top-1/3 right-1/4 w-72 h-72 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
      <div class="absolute bottom-1/4 left-1/3 w-60 h-60 bg-yellow-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-7xl font-black text-white mb-6 leading-tight">
          About <span class="text-yellow-400">CourtVision</span> Daily
        </h1>
        <p class="text-xl md:text-2xl text-gray-200 mb-10 font-light max-w-3xl mx-auto">
          Daily Insights into Basketball Excellence
        </p>
        <div class="w-24 h-1 bg-yellow-400 mx-auto mb-8"></div>
        <p class="text-lg text-gray-300 max-w-2xl mx-auto">
          Discover the story behind our passion for bringing you the most insightful basketball coverage
        </p>
      </div>
    </div>
  </div>

  <!-- Mission Section -->
  <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Mission</h2>
        <div class="w-20 h-1 bg-yellow-400 mx-auto"></div>
      </div>
      
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-xl p-8 md:p-12 mb-12 accent-border">
          <p class="text-xl text-gray-700 leading-relaxed">
            We believe basketball is an art form, a science, and a spectacle. Founded by passionate fans and seasoned analysts, 
            CourtVision Daily aims to deliver exceptional content that celebrates the game's greatest moments, players, and strategies.
          </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          {missionPoints.map((point, index) => (
            <div key={index} class="feature-card bg-white rounded-xl p-6 shadow-md transition-all duration-300">
              <div class="w-12 h-12 rounded-full bg-yellow-100 flex items-center justify-center mb-4">
                <i class="fas fa-check text-yellow-500 text-xl"></i>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">{point}</h3>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-20 bg-gray-900 text-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-4">Meet Our Team</h2>
        <div class="w-20 h-1 bg-yellow-400 mx-auto"></div>
        <p class="text-gray-300 mt-6 max-w-2xl mx-auto">
          Passionate individuals dedicated to bringing you the best basketball insights
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {teamMembers.map((member, index) => (
          <div key={index} class="bg-gray-800 rounded-2xl overflow-hidden shadow-xl transform transition-transform duration-300 hover:scale-105">
            <div class="h-48 bg-gradient-to-r from-yellow-500 to-yellow-600 flex items-center justify-center">
              <div class="bg-gray-200 border-2 border-dashed rounded-xl w-16 h-16" />
            </div>
            <div class="p-6">
              <h3 class="text-2xl font-bold mb-2">{member.name}</h3>
              <p class="text-yellow-400 font-semibold mb-4">{member.role}</p>
              <p class="text-gray-300">{member.bio}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">What We Value</h2>
        <div class="w-20 h-1 bg-yellow-400 mx-auto"></div>
      </div>
      
      <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-12">
        <div class="flex items-start">
          <div class="mr-6 mt-1">
            <div class="w-12 h-12 rounded-full bg-yellow-100 flex items-center justify-center">
              <i class="fas fa-heart text-yellow-500 text-xl"></i>
            </div>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-3">Passion for the Game</h3>
            <p class="text-gray-600 leading-relaxed">
              Every piece of content is crafted with genuine love for basketball, ensuring our readers get authentic and heartfelt perspectives.
            </p>
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="mr-6 mt-1">
            <div class="w-12 h-12 rounded-full bg-yellow-100 flex items-center justify-center">
              <i class="fas fa-chart-line text-yellow-500 text-xl"></i>
            </div>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-3">Data-Driven Insights</h3>
            <p class="text-gray-600 leading-relaxed">
              We combine quantitative analysis with qualitative storytelling to provide comprehensive understanding of player performance and team dynamics.
            </p>
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="mr-6 mt-1">
            <div class="w-12 h-12 rounded-full bg-yellow-100 flex items-center justify-center">
              <i class="fas fa-users text-yellow-500 text-xl"></i>
            </div>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-3">Community First</h3>
            <p class="text-gray-600 leading-relaxed">
              Our audience is at the heart of everything we do, with dedicated engagement and community-building initiatives.
            </p>
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="mr-6 mt-1">
            <div class="w-12 h-12 rounded-full bg-yellow-100 flex items-center justify-center">
              <i class="fas fa-bolt text-yellow-500 text-xl"></i>
            </div>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-3">Real-Time Analysis</h3>
            <p class="text-gray-600 leading-relaxed">
              We deliver timely insights that matter, helping fans stay informed and engaged as the game unfolds.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-gray-900 to-black text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">Join Thousands of Basketball Enthusiasts</h2>
      <p class="text-xl text-gray-300 mb-10 max-w-3xl mx-auto">
        Subscribe to get daily insights delivered straight to your inbox
      </p>
      <div class="max-w-md mx-auto flex">
        <input 
          type="email" 
          placeholder="Your email address" 
          class="flex-grow px-6 py-4 rounded-l-lg text-gray-900 focus:outline-none"
        />
        <button class="bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-bold px-8 py-4 rounded-r-lg transition-colors duration-300">
          Subscribe
        </button>
      </div>
    </div>
  </section>
</Layout>