---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Contact Us - CourtVision Daily";
const pageDescription = "Get in touch with CourtVision Daily for inquiries, feedback, or collaboration on basketball insights. We're passionate about the game and ready to connect.";

const reasons = [
  {
    title: "Share Your Thoughts",
    description: "Discuss the latest NBA drama and share your insights"
  },
  {
    title: "Guest Contributions",
    description: "Propose story ideas or become a featured contributor"
  },
  {
    title: "Advertising",
    description: "Explore partnership opportunities with our audience"
  },
  {
    title: "Clarifications",
    description: "Get answers to our analysis questions"
  }
];

const socialMedia = [
  {
    name: "Twitter",
    url: "https://twitter.com/courtvisiondaily",
    icon: "fab fa-twitter"
  },
  {
    name: "Instagram",
    url: "https://instagram.com/courtvisiondaily",
    icon: "fab fa-instagram"
  },
  {
    name: "Facebook",
    url: "https://facebook.com/courtvisiondaily",
    icon: "fab fa-facebook"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-br from-[#0c1426] to-[#1a2a4d] py-24 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          <span class="block">Ready to Talk</span>
          <span class="block mt-2 text-transparent bg-clip-text bg-gradient-to-r from-[#ffb300] to-[#ff9800]">Basketball?</span>
        </h1>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto">
          At CourtVision Daily, we're passionate about connecting with fans who share our love for the game.
        </p>
      </div>
    </div>
  </div>

  <!-- Reasons to Contact Section -->
  <section class="py-20 bg-[#f8f9fa]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-[#0c1426] mb-4">Why Reach Out?</h2>
        <div class="w-24 h-1 bg-[#ffb300] mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {reasons.map((reason, index) => (
          <div 
            key={index} 
            class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:shadow-xl hover:-translate-y-2 border border-gray-100"
          >
            <div class="w-12 h-12 rounded-full bg-[#0c1426] flex items-center justify-center mb-4">
              <span class="text-xl text-[#ffb300] font-bold">{index + 1}</span>
            </div>
            <h3 class="text-xl font-bold text-[#0c1426] mb-2">{reason.title}</h3>
            <p class="text-gray-600">{reason.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Info Section -->
  <section class="py-20 bg-gradient-to-r from-[#0c1426] to-[#1a2a4d] text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Get in Touch</h2>
          <p class="text-gray-300 max-w-2xl mx-auto">
            We'd love to hear from you! Whether it's feedback, collaboration ideas, or just a chat about basketball, reach out through our channels below.
          </p>
        </div>
        
        <div class="flex flex-col md:flex-row gap-12">
          <div class="md:w-1/2">
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
              <h3 class="text-2xl font-bold mb-6">Contact Information</h3>
              
              <div class="space-y-6">
                <div class="flex items-start">
                  <div class="mt-1 mr-4 text-[#ffb300]">
                    <i class="fas fa-envelope text-xl"></i>
                  </div>
                  <div>
                    <h4 class="font-bold text-lg">Email</h4>
                    <a href="mailto:hello@courtvisiondaily.com" class="text-gray-300 hover:text-[#ffb300] transition-colors">
                      hello@courtvisiondaily.com
                    </a>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="mt-1 mr-4 text-[#ffb300]">
                    <i class="fas fa-user-friends text-xl"></i>
                  </div>
                  <div>
                    <h4 class="font-bold text-lg">Follow Us</h4>
                    <div class="flex space-x-4 mt-2">
                      {socialMedia.map((platform, index) => (
                        <a 
                          key={index} 
                          href={platform.url} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-[#ffb300] hover:text-[#0c1426] transition-colors"
                        >
                          <i class={platform.icon}></i>
                        </a>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="md:w-1/2">
            <div class="bg-gradient-to-br from-[#ffb300]/10 to-[#ff9800]/10 backdrop-blur-sm rounded-2xl p-8 border border-[#ffb300]/30">
              <h3 class="text-2xl font-bold mb-6">Send a Message</h3>
              
              <form class="space-y-4">
                <div>
                  <label for="name" class="block mb-2 font-medium">Your Name</label>
                  <input 
                    type="text" 
                    id="name" 
                    class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 focus:border-[#ffb300] focus:outline-none text-white placeholder-gray-400"
                    placeholder="Enter your name"
                  />
                </div>
                
                <div>
                  <label for="email" class="block mb-2 font-medium">Email Address</label>
                  <input 
                    type="email" 
                    id="email" 
                    class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 focus:border-[#ffb300] focus:outline-none text-white placeholder-gray-400"
                    placeholder="Enter your email"
                  />
                </div>
                
                <div>
                  <label for="message" class="block mb-2 font-medium">Your Message</label>
                  <textarea 
                    id="message" 
                    rows="4"
                    class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 focus:border-[#ffb300] focus:outline-none text-white placeholder-gray-400"
                    placeholder="What would you like to discuss?"
                  ></textarea>
                </div>
                
                <button 
                  type="submit"
                  class="w-full bg-[#ffb300] text-[#0c1426] font-bold py-3 px-6 rounded-lg hover:bg-[#ff9800] transition-colors shadow-lg hover:shadow-xl"
                >
                  Send Message
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-[#0c1426]">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Join Our Basketball Community</h2>
        <p class="text-xl text-gray-300 mb-8">
          Stay connected with daily insights, exclusive content, and real-time updates from the court.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-3 bg-[#ffb300] text-[#0c1426] font-bold rounded-lg hover:bg-[#ff9800] transition-colors shadow-lg">
            Subscribe to Updates
          </button>
          <button class="px-8 py-3 bg-transparent border-2 border-[#ffb300] text-[#ffb300] font-bold rounded-lg hover:bg-[#ffb300]/10 transition-colors">
            Follow on Social
          </button>
        </div>
      </div>
    </div>
  </section>

  <style>
    @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
    
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    .gradient-text {
      background: linear-gradient(90deg, #ffb300, #ff9800);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    
    .bg-pattern {
      background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c0-3.314 2.686-6 6-6s6 2.686 6 6-2.686 6-6 6-6-2.686-6-6zm48 28c0-3.314 2.686-6 6-6s6 2.686 6 6-2.686 6-6 6-6-2.686-6-6zm-4-44c0-3.314 2.686-6 6-6s6 2.686 6 6-2.686 6-6 6-6-2.686-6-6zm-32 28c0-3.314 2.686-6 6-6s6 2.686 6 6-2.686 6-6 6-6-2.686-6-6zm36-44c0-3.314 2.686-6 6-6s6 2.686 6 6-2.686 6-6 6-6-2.686-6-6zM78 36c0-3.314 2.686-6 6-6s6 2.686 6 6-2.686 6-6 6-6-2.686-6-6zM20 80c0-3.314 2.686-6 6-6s6 2.686 6 6-2.686 6-6 6-6-2.686-6-6z' fill='%23ffb300' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
    }
  </style>
</Layout>